<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:scrollbars="none"
        android:padding="3dip">

        <FrameLayout
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:id="@+id/left_panel_gesture">

            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:id="@+id/left_panel"
                android:layout_margin="@dimen/layout_margin">

                <Button
                    android:tag="ctrl_left"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_height="@dimen/button_size"
                    android:layout_width="@dimen/button_size"
                    android:text="CTRL"
                    android:id="@+id/button_ctrl"
                    android:textScaleX="0.6"
                    android:background="@drawable/button"
                    android:textColor="@color/text_color"/>

                <Button
                    android:tag="shift_left"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_height="@dimen/button_size"
                    android:layout_width="@dimen/button_size"
                    android:text="SHIFT"
                    android:id="@+id/button_shift"
                    android:textScaleX="0.6"
                    android:background="@drawable/button"
                    android:textColor="@color/text_color"/>

            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:layout_height="wrap_content"
            android:layout_width="0dip"
            android:layout_weight="1.0"
            android:id="@+id/gesture_area">

            <LinearLayout
                android:layout_height="@dimen/height"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:id="@+id/unistroke_area">

                <android.gesture.GestureOverlayView
                    android:id="@+id/gestures_overlay"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gestureStrokeType="single"
                    android:fadeEnabled="false"
                    android:background="#222222"
                    android:layout_weight="4.0"
                    android:layout_margin="@dimen/layout_margin">

                    <TextView
                        android:id="@+id/info"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:textColor="#C6C6C6"
                        android:padding="10dp"/>

                </android.gesture.GestureOverlayView>

                <android.gesture.GestureOverlayView
                    android:id="@+id/gestures_overlay_num"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gestureStrokeType="single"
                    android:fadeEnabled="false"
                    android:background="#222222"
                    android:layout_weight="3.0"
                    android:layout_margin="@dimen/layout_margin">

                    <TextView
                        android:id="@+id/info_num"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:textColor="#C6C6C6"
                        android:padding="10dp"/>

                </android.gesture.GestureOverlayView>

            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:id="@+id/right_panel_gesture">

            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:id="@+id/right_panel"
                android:layout_margin="@dimen/layout_margin">

                <Button
                    android:tag="del"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_height="@dimen/button_size"
                    android:layout_width="@dimen/button_size"
                    android:text="DEL"
                    android:width="@dimen/button_size"
                    android:id="@+id/button_del"
                    android:textScaleX="0.6"
                    android:background="@drawable/button"
                    android:textColor="@color/text_color"/>

                <Button
                    android:tag="enter"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_height="@dimen/button_size"
                    android:layout_width="@dimen/button_size"
                    android:text="ENTER"
                    android:id="@+id/button_enter"
                    android:textScaleX="0.6"
                    android:background="@drawable/button"
                    android:textColor="@color/text_color"/>

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

</LinearLayout>

